<div class="users">
  <% @users.each do |user| %>
    <div class="grid">
      <h2>
        <%= link_to(user.username, user_path(user)) %>
      </h2>
      <p>
        <%= image_tag(user.avatar) if user.avatar %>
      </p>
      <p>
        <%= link_to('Edit', edit_user_path(user)) %>
        <%= link_to('| Delete', user, :data =>{:confirm=>'Are you sure you want to do delete this user?',:method => :delete }) %>
      </p>
    </div>
  <% end %>
</div>
